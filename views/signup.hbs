  </head>
  <body>
	{{>header}}
	
	
	<div class="tr-breadcrumb bg-image section-before">
		<div class="container">
			<div class="breadcrumb-info text-center">
				<div class="page-title">
					<h1>Create Account</h1>
					<span> Register Now and start getting jobs within your Campus</span>
				</div>				
			</div>
		</div><!-- /.container -->
	</div><!-- tr-breadcrumb -->	
	
	<div class="tr-account section-padding">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<div class="user-account">
						<!-- Nav tabs -->
						<ul class="nav nav-tabs  nav-justified" role="tablist">
							<li role="presentation" class="active"><a href="#seeker" aria-controls="seeker" role="tab" data-toggle="tab">Registration Form</a></li>
							<!-- <li role="presentation"><a href="#employers" aria-controls="employers" role="tab" data-toggle="tab">Employers</a></li> -->
						</ul>

						<!-- Tab panes -->
						<div class="tab-content">
							<div role="tabpanel" class="tab-pane active" id="seeker">
							
								<div class="account-content">
								
									<form action="#" id="signupForm" class="tr-form">
                                        <div class="alert"></div>
										<div class="form-group form-inline">
										
											 <input type="text"  class="form-control" id="firstname"  placeholder="First Name">   
											  <input type="text" class="form-control" id="lastname" placeholder="Last Name"> 
												 <div class=" radio-inline"> 
												   Gender
												  <label class="radio-inline">
													  <input type="radio" name="inlineRadioOptions" id="male" value="M"> Male
													</label>
													<label class="radio-inline">
													  <input type="radio" name="inlineRadioOptions" id="female" value="F"> Female
													</label>
												 
												 </div> 
										 </div>  
										 
                      <div class="form-group">
                          {{!-- <label for="school">Select Campus</label> --}}
                          <select name="school" id="school" class="form-control">
                            <option value="">Select Campus</option>
                              {{#each schools as |school|}}
                                <option value="{{school._id}}">{{school.name}}</option>
                              {{/each}}
                          </select>
                      </div>
										
										<div class="form-group form-inline">
											<input type="text" class="form-control" id="phone" placeholder="your Phone Number">
											<input type="email" class="form-control" id="email" placeholder="your Email">
											<input type="number" class="form-control" id="age" placeholder="your Age">
											
										</div>
										
									<div class="form-group">
                    <input type="text" id="username" class="form-control" placeholder="Username">
                  </div>
										
									    <div class="form-group">
										  <input type="password"  class="form-control" id="password" placeholder="enter Password"> 
										
										</div>
										
										 <div class="form-group">
										 
										 <input type="password" class="form-control" id="confirm_password" placeholder="confirm Password"> 
										</div>
								
										<!-- /.category-change -->
										
										
										<button type="submit" id="submit" class="btn btn-primary">Sign Up</button>
									</form>	
									<div class="new-user text-center">
										<span>Already Registered? <a href="/login">Sign in</a> </span>
									</div>
								</div>
							</div>
							
						</div>				
					</div>			
				</div>
			</div><!-- /.row -->			
		</div><!-- container -->
	</div><!-- /.tr-account-->	

	{{>footer}}

    <!-- JS -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/inview.min.js"></script>
    <script src="js/counterup.min.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/jquery-te.min.js"></script>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="js/gmaps.min.js"></script>
    <script src="js/main.js"></script>

    <script>
        $('#signupForm').submit(function(e){
            e.preventDefault();
            $('#submit').attr('disable',true).text('Please wait...');
            let gender = "";
            if($('#female').is(':checked')){
                gender = 'female';
            }else if($('#male').is(':checked')){
                gender = 'male';
            }
            const user = {
                 "firstname": $('#firstname').val(),
                 "lastname": $('#lastname').val(),
                 "email": $('#email').val(),
                 "password": $('#password').val(),
                 "confirm_password": $('#confirm_password').val(),
                 "gender": gender,
                 "age": $('#age').val(),
                 "school": $('#school').val(),
                 "phone": $('#phone').val(),
                 "username": $('#username').val()
             };
             $.post('/signup',user,function(data){
                 if(data['status']){
                    $('.alert').removeClass("alert-danger").addClass("alert-success").text(data['message']);
                    setTimeout(() => {
                        window.location = "/login";
                    }, 2000);
                 }else{
                    $('.alert').removeClass("alert-success").addClass("alert-danger").text(data['message']);
                    $('#submit').attr('disable',false).text('Sign Up');
                 }
             })
        })
    </script>
  </body>
</html>	