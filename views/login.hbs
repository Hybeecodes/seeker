    <script>
        $('#loginForm').submit(function(e){
            e.preventDefault();
            $('#submit').attr('disable',true).text('Please wait...');
            const user = {
                 "email": $('#email').val(),
                 "password": $('#password').val()
             };
            $.post('/login',user,function(data){
                 if(data['status']){
                    $('.alert').removeClass("alert-danger").addClass("alert-success").text(data['message']);
                    setTimeout(() => {
                        window.location = "/user/dashboard";
                    }, 2000);
                 }else{
                    $('.alert').removeClass("alert-success").addClass("alert-danger").text(data['message']);
                    $('#submit').attr('disable',false).text('Login');
                 }
             })
        })
    </script>
